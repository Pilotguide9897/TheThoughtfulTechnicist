<div class="container">
    <div class="row">
        <div class="col">
            <h2>Sign Up/Login</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form class="login-form">
                <div class="login-form-group">
                    <label for="email-login">Email:</label>
                    <input type="text" class="form-input" id="email-login"/>
                </div>
                <divclass="login-form-group">
                    <label for="password-login">Password:</label>
                    <input type="text" class="form-input" id="password-login"/>
                </div>
                <div class="login-form-group">
                    <button class="btn btn-secondary" type="submit">Login</button>
                </div>
            </form>
        </div>
        <div class="col">
            <form class="signup-form">
                <div class="signup-form-group">
                    <label for="email-signup">Email:</label>
                    <input type="text" class="form-input" id="email-signup"/>
                </div>
                <divclass="signup-form-group">
                    <label for="password-signup">Password:</label>
                    <input type="text" class="form-input" id="password-signup"/>
                </div>
                <div class="signup-form-group">
                    <button class="btn btn-secondary" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>